  {
    "name": "Authentication: Microsoft (Identity)",
    "id": "AI038910",
    "description": "Authentication using Microsoft Identity Platform (ADAL/MSAL) or similar",
    "tags": [
      "Authentication.Microsoft.Online"
    ],
    "severity": "critical",
    "patterns": [
      {
        "pattern": "AcquireTokenForClient|ConfidentialClientApplicationBuilder",
        "type": "regexword",
        "scopes": [
          "code",
          "comment"
        ],
        "confidence": "high"
      }
    ],
    "conditions": [
      {
        "pattern": {
          "pattern": "\\.WithClientClaims\\([^)]*cert[^)]*\\)|\\.WithCertificate\\(",
          "type": "regex",
          "scopes": [
            "code"
          ],
          "_comment": "negate cases for certificate rule identifying client TLS auth"
        },
        "search_in": "finding-region(-10,10)",
        "negate_finding": true
      }
    ],
    "must-match": [
      "var app = ConfidentialClientApplicationBuilder.Create(clientId).AcquireTokenForClient(scopes).ExecuteAsync();",
      "result = app.AcquireTokenForClient(new[] { scope }).ExecuteAsync().Result;"
    ],
    "must-not-match": [
      "var app = builder.WithCertificate(cert).AcquireTokenForClient(scopes);",
      "app.WithClientClaims(claims, cert).Build();"
    ]
  },
