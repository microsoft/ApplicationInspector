{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/microsoft/applicationinspector/main/rule-schema-v1.json",
  "title": "Application Inspector Rule Schema",
  "description": "Schema for Application Inspector rule definitions",
  "type": "array",
  "items": {
    "$ref": "#/definitions/rule"
  },
  "definitions": {
    "rule": {
      "type": "object",
      "required": ["id", "name", "tags", "patterns"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "description": "Unique identifier for the rule"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name for the rule"
        },
        "description": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ],
          "description": "Detailed description of what the rule detects"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Tags associated with this rule"
        },
        "severity": {
          "oneOf": [
            { 
              "type": "string",
              "enum": ["Critical", "Important", "Moderate", "BestPractice", "ManualReview", "Unspecified"]
            },
            { "type": "null" }
          ],
          "description": "Severity level of the finding"
        },
        "patterns": {
          "type": "array",
          "items": { "$ref": "#/definitions/searchPattern" },
          "minItems": 1,
          "description": "Search patterns to match"
        },
        "conditions": {
          "oneOf": [
            {
              "type": "array",
              "items": { "$ref": "#/definitions/searchCondition" }
            },
            { "type": "null" }
          ],
          "description": "Additional conditions that must be met"
        },
        "applies_to": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "File extensions or languages this rule applies to"
        },
        "does_not_apply_to": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "File extensions or languages this rule does not apply to"
        },
        "applies_to_file_regex": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "Regular expressions for files this rule applies to"
        },
        "exclude_file_regex": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "Regular expressions for files this rule excludes"
        },
        "depends_on_tags": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "Tags that must be present for this rule to apply"
        },
        "overrides": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "Rule IDs that this rule overrides"
        },
        "must-match": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "Self-test sample texts that the rule must match to be considered valid"
        },
        "must-not-match": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "Self-test sample texts that the rule must not match to be considered valid"
        },
        "_comment": {
          "type": "string",
          "description": "Optional comment field for documentation"
        }
      }
    },
    "searchPattern": {
      "type": "object",
      "required": ["pattern"],
      "properties": {
        "pattern": {
          "type": "string",
          "description": "The pattern to search for"
        },
        "type": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["Regex", "RegexWord", "String", "Substring"]
            },
            { "type": "null" }
          ],
          "default": "Regex",
          "description": "Type of pattern matching"
        },
        "modifiers": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["i", "m", "s", "x", "ignorecase", "multiline", "singleline", "extended"]
              }
            },
            { "type": "null" }
          ],
          "description": "Regex modifiers"
        },
        "scopes": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["Code", "Comment", "All", "Html"]
              }
            },
            { "type": "null" }
          ],
          "description": "Scopes to search within"
        },
        "confidence": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["High", "Medium", "Low", "Unspecified"]
            },
            { "type": "null" }
          ],
          "description": "Confidence level of the pattern"
        },
        "xpaths": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "XPath expressions for XML matching"
        },
        "xpathnamespaces": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "Namespace mappings for XPath expressions"
        },
        "jsonpaths": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "JSONPath expressions for JSON matching"
        },
        "ymlpaths": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "YAMLPath expressions for YAML matching"
        }
      }
    },
    "searchCondition": {
      "type": "object",
      "required": ["pattern"],
      "properties": {
        "pattern": {
          "$ref": "#/definitions/searchPattern",
          "description": "Pattern to search for in the condition"
        },
        "search_in": {
          "type": "string",
          "pattern": "^(file|finding-region\\(-?\\d+,\\d+\\)|finding-only|same-line|same-file)$",
          "description": "Where to search for the condition"
        },
        "negate_finding": {
          "type": "boolean",
          "default": false,
          "description": "Whether to negate the condition"
        }
      }
    }
  }
}
